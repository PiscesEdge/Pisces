<%- include ('partialss/header') %>

    <main id="site-main">
        <div class="container">
            <div class="boc-nav d-flex justify-between">
                <div class="filter">
                    <a href="/dashboard">
                        <i class="fas fa-angle-double-left"></i> Contacts
                    </a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="tetx-dark"> Update contact</h2>
                <span class="text-dark">Update contact using Form</span>
            </div>
            <!--the form-->
            <form method="post" id="update-user" class="login-box">
                <div class="new_user">
                    <div class="form-group mt-3">
                        <label for="name" class="text-dark">Name</label>
                        <input type="hidden" name="id" value="<%= user._id %>">
                        <input type="text" name="id" value="<%= user.name %>" placeholder="John Doe">
                    </div>
                    <div class="form-group mt-3">
                        <label for="Email" class="text-dark">Email</label>
                        <input type="text" name="email" value="<%= user.email %>" placeholder="JohnDoe@gmail.com">
                    </div>
                    <div class="form-group mt-3">
                        <label for="Email" class="text-dark">Phone</label>
                        <input type="phone" name="phone" value="<%= user.phone %>" placeholder="000-000-0000">
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-danger text-dark update">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </main>

    <%- include ('partialss/footer') %>