<form>
    <div>
        <div class="form-group">
            <label for="id">Name</label>
            <textarea class="form-control" name="id" id="id" rows="3" placeholder="name" required></textarea>
        </div>

        <div class="form-group">
            <label for="details">Phone Number</label>
            <textarea class="form-control" id="details" name="details" id="details" rows="3" placeholder="phone"
                required></textarea>
        </div>

        <div class="form-group">
            <label for="email">E-mail Address</label>
            <input type="text" class="form-control" id="email" aria-describedby="email" name="email"
                placeholder="Enter Email" required>
        </div>

        <button type="submit" class="btn btn-primary btn-lg"><i class="fas fa-plus-circle"></i> New Contact</button>
        <a href="component-list.ejs" class="btn btn-warning btn-lg"><i>Cancel</i></a>
    </div>
</form>